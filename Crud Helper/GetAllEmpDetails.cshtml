@model IEnumerable<ProjectWithHelper.Models.Employee>
@{
    ViewBag.Title = "GetAllEmpDetails";
}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<h2>GetAllEmpDetails</h2>
<div style="width:90%; margin:0 auto;">
    <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <tr>

            <th>
                Image
            </th>
            <th>
                Name
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            @Html.HiddenFor(model => item.Emp_ID)
            <tr>
                <td>
                    <img src=" ~/UploadedFiles/@Html.DisplayFor(modelItem =>item.Emp_Img)" id="pic" style="height:200px;width:200px;" />
                </td>

                <td> @Html.DisplayFor(modelItem => item.Emp_Name)</td>
                <td> @Html.DisplayFor(modelItem => item.Emp_Address)</td>
                <td> @Html.DisplayFor(modelItem => item.Emp_Email)</td>
                <td> @Html.DisplayFor(modelItem => item.Emp_DOB)</td>
                <td> @Html.DisplayFor(modelItem => item.Emp_MobNo)</td>
                <td> @Html.DisplayFor(modelItem => item.Emp_Sex)</td>
                <td> @Html.DisplayFor(modelItem => item.Emp_Country)</td>
                <td> @Html.DisplayFor(modelItem => item.Emp_State)</td>
                <td> @Html.DisplayFor(modelItem => item.Emp_City)</td>
                <td> @Html.DisplayFor(modelItem => item.Emp_DevLangview)</td>

                <td>
                    @Html.ActionLink("Edit", "EditEmpDetails", new { id = item.Emp_ID }) |
                    @Html.ActionLink("Delete", "DeleteEmp", new { id = item.Emp_ID },
                   new { onclick = "return confirm('Are sure wants to delete?');" })
                </td>
            </tr>

        }

    </table>
</div>




<script>
    $('#demoGrid').dataTable();
</script>  